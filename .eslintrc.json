{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"allowForLoopAfterthoughts": "off",
		"import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
	}
}
